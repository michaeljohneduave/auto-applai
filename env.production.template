# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from your Clerk dashboard
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here

# =============================================================================
# AI API KEYS
# =============================================================================
# OpenAI API key for GPT models
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Gemini API key
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# GOOGLE CLOUD STORAGE (for backups)
# =============================================================================
# Your Google Cloud project ID
GOOGLE_CLOUD_PROJECT=your-project-id

# Google Cloud Storage bucket for backups
GOOGLE_CLOUD_STORAGE_BUCKET=auto-apply-backups

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Number of days to keep backups (default: 30)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Node environment
NODE_ENV=production

# Application port (internal)
PORT=5500

# =============================================================================
# SERVICE URLs (internal Docker network)
# =============================================================================
# These are automatically set by Docker Compose
PDF_SERVICE_URL=http://pandoc-latex:80
PUPPETEER_SERVICE_URL=http://puppeteer-mcp:80

# =============================================================================
# LOGGING
# =============================================================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# SECURITY
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# DATABASE
# =============================================================================
# SQLite database path (relative to container)
DATABASE_PATH=/app/data/sqlite.db

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limit requests per minute
API_RATE_LIMIT=100

# =============================================================================
# MONITORING
# =============================================================================
# Enable health checks
HEALTH_CHECK_ENABLED=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30
