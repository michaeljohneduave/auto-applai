{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"files": {
		"includes": ["packages/**/*"]
	},
	"linter": {
		"rules": {
			"correctness": {
				"noUnusedFunctionParameters": {
					"fix": "none",
					"level": "warn",
					"options": {
						"ignoreRestSiblings": true
					}
				},
				"noUnusedVariables": {
					"fix": "none",
					"level": "warn",
					"options": {
						"ignoreRestSiblings": true
					}
				},
				"noUnusedImports": "warn"
			},
			"suspicious": {
				"useAwait": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"formatter": {
		"bracketSpacing": true,
		"lineWidth": 80
	}
}
